<div class="container">

  <%= render 'common/flash_notice' %>

  <table class="table table-striped table-bordered table-condensed">
    <col width="60%"/>
    <thead>
    <tr>
      <th>标题</th>
      <th>slug</th>
      <th>创建时间</th>
    </tr>
    </thead>
    <% if @pages.blank? %>
        <tr>
          <td colspan="5" class="empty-table">暂无页面</td>
        </tr>
    <% end %>
    <% @pages.each do |page| %>
        <tr>
          <td>
            <%= link_to page.title, blog_path(page.slug), :target=>'_blank', :class=>'pull-left' %>
            <%= link_to '上移', up_admin_page_path(page), :method=>:post, :class=>'btn pull-right hide' %>
            <%= link_to '下移', down_admin_page_path(page), :method=>:post, :class=>'btn pull-right hide' %>
            <%= link_to '删除', [:admin, page], :class=>'btn btn-danger pull-right hide', :confirm=>'确定删除?', :method=>:delete %>
            <%= link_to '修改', edit_admin_page_path(page), :class=>'btn btn-primary pull-right hide' %>
          </td>
          <td><%= page.slug %></td>
          <td><%= l page.created_at, :format=>:long %></td>
        </tr>
    <% end %>
  </table>

    <%= link_to '<i class="icon-pencil icon-white"></i> 添加页面'.html_safe,
                new_admin_page_path, :class=>"btn btn-primary btn-large" %>


</div>