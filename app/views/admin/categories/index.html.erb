<div class="container">
  <%= form_for([:admin, @category], :html => {:class => 'well form-inline'}) do |f| -%>
      <%= f.text_field :name, :class => "input-xlarge", :maxlength => 20, :placeholder => '分类名称', :required => true %>
      <button type="submit" class="btn  btn-primary">新建分类</button>
      <div class="tooltip bottom fade">
        <div class="tooltip-arrow"></div>
        <div class="tooltip-inner"></div>
      </div>
  <% end -%>

  <table class="table table-hover table-condensed">
    <col width="55%"/>
    <col width="10%"/>
    <col width="20%"/>
    <thead>
    <tr>
      <th>名称</th>
      <th>文章数</th>
      <th>创建时间</th>
      <th></th>
    </tr>
    </thead>
    <tr class="table-empty-row" style="display: none">
      <td colspan="4">暂无分类</td>
    </tr>
    <tr id="categoryEditView" style="display: none">
      <td colspan="4">
        <form class="form-inline" style="margin-bottom: 0">
          <input type="text" class="input-xlarge" name="categroy[name]" placeholder="分类名称" required/>
          <button type="submit" class="btn  btn-primary">提交修改</button>
          <button type="button" class="btn cancel-edit">取消</button>
          <div class="tooltip bottom fade">
            <div class="tooltip-arrow"></div>
            <div class="tooltip-inner"></div>
          </div>
        </form>
      </td>
    </tr>
  </table>

</div>

<% content_for :js do %>
    <script>
        var category_json = <%=raw @categories.to_json %>;
        seajs.use('/assets/klog/admin/categories/index');
    </script>
<% end %>