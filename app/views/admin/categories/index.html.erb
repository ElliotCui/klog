<div class="container">
  <h2>分类</h2>
  <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
  <% end %>
  <table class="table table-striped table-bordered table-condensed">
    <col width="50%"/>
    <col width="10%"/>
    <col width="20%"/>
    <thead>
    <tr>
      <th>名称</th>
      <th>文章数</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
    </thead>
    <% if @categories.blank? %>
        <tr>
          <td colspan="4" class="empty-table">暂无分类</td>
        </tr>
    <% end %>
    <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.blog_count %></td>
          <td><%= l category.created_at %></td>
          <td>
            <%= link_to '修改', edit_admin_category_path(category) %>
            <%= link_to '删除', [:admin, category], :confirm => '确定删除?', :method => :delete %>
          </td>
        </tr>
    <% end %>
  </table>

  <%= form_for([:admin, @category], :html=>{:class=>'well form-inline'}) do |f| -%>
      <% if flash[:error] %>
          <div class="alert alert-error">
            <%= flash[:error] %>
          </div>
      <% end %>
      <%= f.text_field :name, :class=>"input-xlarge", :placeholder=>'分类名称' %>
      <button type="submit" class="btn  btn-primary">新建分类</button>
  <% end -%>

</div>