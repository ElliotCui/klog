<div class="container">
  <h2>分类</h2>
  <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
  <% end %>

  <%= form_for([:admin, @category], :html=>{:class=>'well form-inline'}) do |f| -%>
      <% if flash[:error] %>
          <div class="alert alert-error">
            <%= flash[:error] %>
          </div>
      <% end %>
      <%= f.text_field :name, :class=>"input-xlarge", :maxlength=>20, :placeholder=>'分类名称' %>
      <button type="submit" class="btn  btn-primary">新建分类</button>
  <% end -%>

  <table class="table table-striped table-bordered table-condensed">
    <col width="50%"/>
    <col width="10%"/>
    <col width="20%"/>
    <thead>
    <tr>
      <th>名称</th>
      <th>文章数</th>
      <th>创建时间</th>
      <th>管理</th>
    </tr>
    </thead>
    <% if @categories.blank? %>
        <tr>
          <td colspan="4" class="empty-table">暂无分类</td>
        </tr>
    <% end %>
    <% @categories.each do |category| %>
        <tr>
          <td data-id="<%= category.id %>">
            <%= category.name %>
          </td>
          <td><%= category.blog_count %></td>
          <td><%= l category.created_at, :format=>:long %></td>
          <td>
            <%= link_to '修改', admin_category_path(category), :data=>{:id=>category.id} %>
            <%= link_to '删除', [:admin, category], :confirm => '确定删除?', :method => :delete %>
          </td>
        </tr>
    <% end %>
  </table>

  <%= form_for([:admin, @category], :html=>{:class=>'form-inline', :id=>'edit_form'}, :method=>:put) do |f| -%>
      <%= f.text_field :name, :class=>"input-xlarge", :id=>'edit_cate_name', :placeholder=>'分类名称' %>
      <button type="submit" class="btn  btn-primary">提交修改</button>
      <button type="button" id="cancel_edit" class="btn">取消</button>
  <% end -%>
</div>

<% content_for :js do %>
  <%= javascript_include_tag 'admin/categories/index' %>
<% end %>