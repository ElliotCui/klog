<div class="container">

  <%= render 'admin/settings/nav' %>

  <%= form_for @sidebar, :url => admin_settings_sidebar_path, :method => :put, :html => {:class => "form-horizontal editor-form"} do |f| %>
      <%= render 'common/flash_notice' %>

      <%= error_for(@sidebar) %>

      <fieldset>

        <div class="editor-form-inner">
          <div class="control-group">
            <div class="row-fluid ">
              <%= f.text_field :title, :class => "span12", :placeholder => "标题" %>
            </div>
          </div>
          <%= markdown_editor(f) %>
        </div>
      </fieldset>

      <div class="form-actions">
        <button class="btn btn-large btn-primary" type="submit">
          <i class="icon-edit icon-white"></i>
          修改
        </button>
      </div>
  <% end %>
</div>

<% content_for :head do %>
    <%= session_meta_tags %>
<% end %>

<% content_for :js do %>
    <script>
      <%= seajs_use 'klog/admin/settings/sidebar/edit' %>
    </script>
<% end %>