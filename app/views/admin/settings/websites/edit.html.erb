<div class="container">

  <%= render 'admin/settings/nav' %>

  <%= form_for @website, :url=>admin_settings_website_path, :method=>:put, :html=>{:class=>"form-horizontal admin-form"} do |f| %>
      <%= render 'common/flash_notice' %>

      <%= error_for(@website) %>

      <fieldset>
        <div class="control-group">
          <label class="control-label">网站标题</label>

          <div class="controls">
            <%= f.text_field :title, :class=>"input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">副标题</label>

          <div class="controls">
            <%= f.text_field :sub_title, :class=>"input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">作者姓名</label>

          <div class="controls">
            <%= f.text_field :author, :class=>"input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">网站描述</label>

          <div class="controls">
            <%= f.text_field :descr, :class=>"input-xlarge" %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">底部JS</label>

          <div class="controls">
            <%= f.text_area :bottom_js, :class=>"input-xlarge", :rows=>8 %>
            <span class="help-block">可以加入google分析代码等</span>
          </div>
        </div>

        <div class="form-actions">
          <button class="btn btn-large btn-primary" type="submit">
            <i class="icon-edit icon-white"></i>
            修改
          </button>
        </div>
      </fieldset>
  <% end %>
</div>