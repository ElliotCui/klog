<%= error_for(@blog) %>

<div class="control-group">
  <label class="control-label">标题</label>

  <div class="controls">
    <%= f.text_field :title, :class=>"input-xxlarge" %>
  </div>
</div>

<div class="control-group">
  <label class="control-label" style="padding-top:28px;">内容</label>

  <div class="controls">
    <%# f.markdown_editor :content, :class=>"input-xxlarge", :rows=>20 %>
    <%= markdown_editor(f) %>
  </div>
</div>

<div class="control-group">
  <label class="control-label">附件/图片</label>

  <div class="controls">
    <div id="upload" style="height:30px;"></div>
    <div class="upload-list">
    </div>
  </div>
</div>

<div class="control-group">
  <label class="control-label">slug</label>

  <div class="controls">
    <%= f.text_field :slug, :class=>"input-large" %>
    <span class="help-block">用于文章的URL，如不填写系统会采用当前时间戳</span>
  </div>
</div>

<div class="control-group">
  <label class="control-label">分类</label>

  <div class="controls">
    <%= f.select :category_id, category_options %>
  </div>
</div>

<div class="control-group">
  <label class="control-label">标签</label>

  <div class="controls">
    <%= f.text_field :tag_list %>
    <span class="help-block">请用英文逗号(,)分隔tag词</span>
  </div>
</div>

<%= render :partial=>'admin/common/upload_temp', :locals=>{:parent=>@blog} %>

<% content_for :head do %>
    <%= session_meta_tags %>
<% end %>

<% content_for :js do %>
    <%= javascript_include_tag 'admin/blogs/new' %>
<% end %>