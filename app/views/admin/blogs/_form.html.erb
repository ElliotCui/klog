<%= error_for(@blog) %>

<div class="control-group">
  <label class="control-label">标题</label>

  <div class="controls">
    <%= f.text_field :title, :class=>"input-xxlarge" %>
  </div>
</div>

<div class="control-group editor_tab">

  <div class="controls">
    <ul class="nav nav-pills">
      <li class="active" data-type="edit">
        <a href="javascript:void(0);">编辑</a>
      </li>
      <li data-type="preview">
        <a href="javascript:void(0);">预览</a>
      </li>
    </ul>
  </div>
</div>

<div class="control-group">
  <label class="control-label">内容</label>

  <div class="controls">
    <%= f.text_area :content, :class=>"input-xxlarge", :rows=>20 %>
    <div id="preview"></div>
  </div>
</div>

<div class="control-group">
  <label class="control-label">附件/图片</label>

  <div class="controls">
    <div id="upload" style="height:30px;"></div>
    <div class="upload-list">
    </div>
  </div>
</div>

<div class="control-group">
  <label class="control-label">slug</label>

  <div class="controls">
    <%= f.text_field :slug, :class=>"input-large" %>
  </div>
</div>

<div class="control-group">
  <label class="control-label">分类</label>

  <div class="controls">
    <%= f.select :category_id, category_options %>
  </div>
</div>

<script id="upload-list-temp" type="text/template">
  <div class="filename pull-left">
    <%%= filename %>
  </div>
  <%% if(!is_complete){  %>
  <div class="progress progress-striped active pull-left">
    <div class="bar" style="width:<%%= percent %>%"></div>
  </div>
  <%% }else{ %>
  <div class="handle pull-left" style="">
    <a href="javascript:void(0);" class="insert">插入</a>&nbsp;&nbsp;|&nbsp;
    <a href="<%%= url %>" target="_blank" class="view">查看</a>&nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="/admin/attaches/<%%= id %>.json" class="delete" data-method='delete' data-remote="true" data-confirm="确定删除这个附件？">删除</a>
    <input type="hidden" name="attach_ids[]" value="<%%= id %>"/>
  </div>
  <%% } %>
  <div style="clear:both"></div>
</script>

<script>
var attaches_json = <%=raw (@attaches||[]).map{|a| a.json_data }.to_json %>;
</script>