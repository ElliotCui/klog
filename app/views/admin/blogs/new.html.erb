<div class="container">
  <%= form_for([:admin, @blog], :html=>{:class=>"form-horizontal topic-form"}) do |f| %>
      <fieldset>
        <legend>
          写文章
        </legend>

        <%= render :partial => "form", :locals=>{:f=>f} %>

        <div class="form-actions">
          <%= f.hidden_field :status %>
          <button class="btn btn-large btn-primary" type="submit" data-status="<%= Blog::S_PUBLISH %>">
            <i class="icon-ok icon-white"></i>
            发布文章
          </button>
          <button class="btn btn-large btn-warning" type="submit" data-status="<%= Blog::S_DRAFT %>">
            保存草稿
          </button>
        </div>
      </fieldset>
  <% end %>
  <%= link_to '<<返回列表', admin_blogs_path %>
</div>

<script>
var attaches_json = <%=raw @attaches.to_json %>
</script>

<% content_for :head do %>
    <%= session_meta_tags %>
<% end %>

<% content_for :js do %>
    <%= javascript_include_tag 'admin/blogs/new' %>
<% end %>