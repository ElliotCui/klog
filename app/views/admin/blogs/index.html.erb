<div class="container">

  <ul class="nav nav-tabs">
    <li <%= blog_nav_class(Blog::S_PUBLISH) %>>
      <a href="<%= admin_blogs_path(:status=>Blog::S_PUBLISH) %>">已发布</a>
    </li>
    <li <%= blog_nav_class(Blog::S_DRAFT) %>>
      <a href="<%= admin_blogs_path(:status=>Blog::S_DRAFT) %>">草稿箱</a>
    </li>
  </ul>

  <%= render 'common/flash_notice' %>

  <table class="table table-hover table-condensed">
    <col width="60%"/>
    <col width="15%"/>
    <col/>
    <col/>
    <thead>
    <tr>
      <th>标题</th>
      <th>分类</th>
      <th>评论</th>
      <th>创建时间</th>
    </tr>
    </thead>
    <% if @blogs.blank? %>
        <tr>
          <td colspan="5" class="table-empty-row">暂无文章</td>
        </tr>
    <% end %>
    <% @blogs.each do |blog| %>
        <tr>
          <td>
            <%= link_to blog.title, blog_path(blog.slug), :target=>'_blank', :class=>'pull-left' %>
            <%= link_to '删除', [:admin, blog], :class=>'btn btn-danger list-btn', :confirm=>"确定删除“#{blog.title}”?", :method=>:delete %>
            <%= link_to '修改', edit_admin_blog_path(blog), :class=>'btn btn-primary list-btn' %>
            <% unless blog.publish? %>
                <%= link_to '发布', publish_admin_blog_path(blog), :class=>'btn btn-warning list-btn', :confirm=>'确定要发布?', :method=>:post %>
            <% end %>
          </td>
          <td><%= blog.category.try(:name) %></td>
          <td><%= blog.comment_count %></td>
          <td><%= l blog.created_at, :format=>:long %></td>
        </tr>
    <% end %>
  </table>

  <div>
    <%= link_to '<i class="icon-pencil icon-white"></i> 写文章'.html_safe,
                new_admin_blog_path, :class=>"btn btn-primary btn-large pull-left" %>
    <%= paginate @blogs %>
  </div>
</div>

<% content_for :js do %>
    <script>
      seajs.use('/assets/klog/admin/index');
    </script>
<% end %>