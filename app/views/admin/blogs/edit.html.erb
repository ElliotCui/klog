<div class="container">
  <h2>写文章</h2>
  <%= form_for([:admin, @blog], :html=>{:class=>"form-horizontal"}) do |f| %>
      <%= error_for(@blog) %>

      <div class="control-group">
        <label class="control-label">标题</label>
        <div class="controls">
          <%= f.text_field :title, :class=>"input-xxlarge" %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">slug</label>
        <div class="controls">
          <%= f.text_field :slug, :class=>"input-xxlarge" %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">内容</label>
        <div class="controls">
          <%= f.text_area :content, :class=>"input-xxlarge", :rows=>10 %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">分类</label>
        <div class="controls">
          <%= f.select :category_id, category_options %>
        </div>
      </div>

      <div class="form-actions">
        <button class="btn btn-large btn-primary" type="submit">
          <i class="icon-ok icon-white"></i>
          修改文章
        </button>
      </div>

  <% end %>
</div>