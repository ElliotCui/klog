<div class="container">
  <%= form_for([:admin, @blog], :html=>{:class=>"form-horizontal"}) do |f| %>
      <fieldset>
        <legend>修改文章</legend>

        <%= render :partial => "form", :locals=>{:f=>f} %>

        <div class="form-actions">
          <%= f.hidden_field :status %>
          <button class="btn btn-large btn-primary" type="submit" data-status="<%= Blog::S_PUBLISH %>">
            <i class="icon-edit icon-white"></i>
            <% if @blog.publish? %>
                修改文章
            <% else %>
                发布文章
            <% end %>
          </button>
          <% unless @blog.publish? %>
              <button class="btn btn-large btn-warning" type="submit" data-status="<%= Blog::S_DRAFT %>">
                保存草稿
              </button>
          <% end %>
        </div>
      </fieldset>
  <% end %>
</div>

<% content_for :head do %>
    <%= session_meta_tags %>
<% end %>

<% content_for :js do %>
    <%= javascript_include_tag 'admin/blogs/new' %>
<% end %>